{{#extends "base"}}

{{#block "content"}}
<div class="bg-danger text-white mt-2 pt-3 px-3">
    <table class="table">
        <tread>
            <th>ID</th>
            <th>Title</th>
            <th>Cost in CENTS</th>
            <th>Description</th>
            <th>Date</th>
            <th>Stock</th>
            <th>Height in CM</th>
            <th>Width in CM</th>
        </tread>
        <tbody>
            <tr>
                <td>{{product.id}}</td>
                <td>{{product.title}}</td>
                <td>{{product.cost}}</td>
                <td>{{product.description}}</td>
                <td>{{product.date}}</td>
                <td>{{product.stock}}</td>
                <td>{{product.height}}</td>
                <td>{{product.width}}</td>
            </tr>
        </tbody>
    </table>
</div>
<form method="POST">
    <input type="hidden" name="_csrf" value="{{csrfToken}}"/>
    <h3 class="pb-3">Do you want to delete this post.</h3>
    <a href="/products" class="btn btn-secondary">Cancel</a>
    <input type="submit" value="Delete" class="btn btn-danger" />
</form>

{{/block}}

{{/extends}}